@model buzzparade_codingtest.DTOs.ProblemTwoDto
@{
    ViewBag.Title = "Problem Two";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="FirstString">S: </label>
        @Html.TextBoxFor(m => m.S, new { @class = "form-control" })
    </div>
    <div class="form-group mb-2">
        <label asp-for="SecondString">P: </label>
        @Html.TextBoxFor(m => m.P, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if(ViewBag.Result != null)
{
    <div class="mt-2">
        <label>Result: </label>
        <span>@ViewBag.Result</span>
    </div>
}